
public class Circulo {

	private Punto punto;
	private float radio;

	public Circulo(Punto _punto, float _radio) {
		this.punto = _punto;
		this.radio = _radio;
	}

	public boolean intersectaCon(Circulo circulo) {
		float coordenadaX1 = this.punto.getCordenadaX();
		float coordenadaY1 = this.punto.getCordenadaY();
		float radio1 = this.radio;

		float coordenadaX2 = circulo.punto.getCordenadaX();
		float coordenadaY2 = circulo.punto.getCordenadaY();
		float radio2 = circulo.radio;

		float distancia = (coordenadaX1 - coordenadaX2) * (coordenadaX1 - coordenadaX2)
				+ (coordenadaY1 - coordenadaY2) * (coordenadaY1 - coordenadaY2);

		float radioSumatoria = (radio1 + radio2) * (radio1 + radio2);

		if (distancia >= radioSumatoria)
			return true;
		else
			return false;
	}

	public static void main(String[] args) {
		Circulo circle1 = new Circulo(new Punto(2, 2), 2);
		Circulo circle2 = new Circulo(new Punto(3, 5), 2);

		System.out.println(circle1.intersectaCon(circle2) ? "Es asi" : "No es asi");
	}

}
